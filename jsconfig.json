{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@root/*": [
        "./*"
      ],
      "@controllers/*": [
        "./src/app/controllers/*"
      ],
      "@helpers/*": [
        "./src/helpers",
        "./src/app/helpers",
        "./vendor/helpers"
      ],
      "@models/*": [
        "./src/app/models/*"
      ],
      "@middlewares/*": [
        "./src/app/middlewares/*"
      ],
      "@schemas/*": [
        "./src/database/schemas/*"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  }
}
